@model _2_1_2015_WSite.Models.CommunicationViewModel

@{
    ViewBag.Title = "Details";
}

<div class="row box-outer">
    @if (Model.CommunicationTypeDesc == "Blog Post")
    {
        <h2>Details</h2>
        <div class="blog-author">
            <center>
                <p style="align-content: center"><b>@(Model.CreatedByName)</b></p>
                <img src="@(Model.ImgUrl)" /><br />
            </center>
        </div>
        <h3><u>@Model.MessageTitle</u></h3>
        <h5 style="position: center">Posted: @Model.DatePosted.ToString() </h5>
    }
    
    <div>@Html.Raw(Model.Message)</div>
    
</div>
<p>
    @Html.ActionLink("Done", "Index", null, new { @class = "btn btn-primary btn-xs " })

</p>

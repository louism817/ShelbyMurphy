<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shelby Murphy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
        @*<link href="~/Content/DataTables-1.10.4/css/jquery.dataTables.css" rel="stylesheet" />*@
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    
    <link href="~/Content/style.css" rel="stylesheet" />
    
</head>
<body>
    <div class="container-fluid header-background">
        @Html.Action("Header", "Home")
    </div>
    <div class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shelby Murphy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav main-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Communication?type=Announcement">Announcements</a></li>
                                <li><a href="/Communication/Create?type=Announcement">-- Create</a></li>
                                <li class="divider"></li>
                                <li><a href="/Communication?type=Blog Post">Blogs</a></li>
                                <li><a href="/Communication/Create?type=Blog Post">-- Create</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Elements</a></li>
                                <li><a href="/Elements/Element?type=0">-- About</a></li>
                                <li><a href="/Elements/Element?type=1">-- Contact</a></li>
                                <li><a href="/Elements/Element?type=2">-- Header</a></li>
                                <li class="divider"></li>
                                <li><a href="/User/">Users</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Shelby L. Murphy</p>
        </footer>
    </div>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-sanitize.js"></script>
    @*<script src="~/Scripts/jquery-2.1.3.js"></script>*@
    @*<script src="~/Scripts/jquery-ui-1.11.2.js"></script>*@
    
  @*  @Scripts.Render("~/bundles/jquery")*@
    @*<script src="~/Scripts/DataTables/jquery.dataTables.js"></script>*@
    
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/bootstrap-datepicker.js"></script>
</body>
</html>

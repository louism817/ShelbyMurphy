@model _2_1_2015_WSite.Models.ElementViewModel

@{
    ViewBag.Title = "Element";
}

<h2>Element</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Element</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ElementId)

        <div class="form-group">
            @Html.LabelFor(model => model.ElementBody, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ElementBody, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ElementBody, "", new { @class = "text-danger" })
            </div>
            @Html.HiddenFor(model => model.ElementType, new { @Value = @Model.ElementType })
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}


